<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:gravity="top|center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/materialtxt"
        android:layout_width="599dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_weight="0.38"
        android:background="#EF6C00"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:scaleType="centerInside"
        android:text="MATERIÁL"
        android:textColor="#ffffff"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/kam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Kam ?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#006064"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kamtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Zelený kontejner"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#EF6C00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/anotxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ano"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#AFB42B"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Do zeleného kontejneru můžeme vhazovat barevné sklo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#EF6C00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/netxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Ne"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#F50057"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Do těchto nádob nepatří keramika a porcelán"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#EF6C00"
        android:textSize="20sp" />

</LinearLayout>